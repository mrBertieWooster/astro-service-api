{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
      "standard": {
        "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
      }
    },
    "handlers": {
      "file": {
        "class": "logging.FileHandler",
        "filename": "app.log",
        "formatter": "standard"
      }
    },
    "loggers": {
      "": {
        "handlers": ["file"],
        "level": "INFO",
        "propagate": true
      }
    }
  }